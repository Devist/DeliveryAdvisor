<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#fff">

        <ImageView
            android:id="@+id/appIconView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_launcher_foreground" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#222"
            android:textSize="18dp"
            />
    </RelativeLayout>


    <TextView
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text=""
        android:textColor="#222"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:id="@+id/text_advisor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:text="Not Listening..."
        android:textColor="#F00"
        android:textStyle="bold"
        android:background="#FFF"
        android:gravity="center|right"
        android:id="@+id/text_is_listening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="9sp"
        android:text="아래의 버튼을 누르거나 음성 명령을 내려주세요."
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="#FFF"
        android:gravity="center|right"
        android:id="@+id/text_advisor_description"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_for_work_button"
        android:background="#EEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">



    </LinearLayout>


</LinearLayout>