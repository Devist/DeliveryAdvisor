<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#EFF0F1"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textWorkTitle_ongoing"
            android:text="배송지 1 : 송장번호 [12345746352]"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#EA1D63"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/textWorkContents_ongoing"
            android:text="[오동환]님에게 [보이저 5200 헬로우 월드 120] 배송입니다."
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:textColor="#EA1D63"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/textWorkAddress_ongoing"
            android:text="서울시 금천구 서부샛길 528 가산미소지움 645호"
            android:textSize="10sp"
            android:textColor="#2995FF"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageWorkState_ongoing"
        android:src="@drawable/icon_delivery_ongoing"
        android:layout_width="60dp"
        android:layout_height="match_parent" />


</LinearLayout>