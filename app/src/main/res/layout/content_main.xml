<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#FFFFFF"
    tools:context="com.ldcc.pliss.deliveryadvisor.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="현재 업무"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:background="#383838"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="3.85"/>

        <ListView
            android:id="@+id/currentWorkList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="19"
            android:background="#FAFAFA"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.2"
            android:background="#F5F5F5"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="상세정보"
                android:textColor="#2896F3"
                android:textSize="15sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="배송처리"
                android:textColor="#2896F3"
                android:textSize="15sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="전화연결"
                android:textColor="#2896F3"
                android:textSize="15sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="길 안내"
                android:textColor="#2896F3"
                android:textSize="15sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="match_parent" >

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/style_progress"
                    android:id="@+id/progressWork"
                    android:progress="50"
                    />

                <TextView
                    android:id="@+id/myTextProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/progressWork"
                    android:layout_alignTop="@id/progressWork"
                    android:layout_alignRight="@id/progressWork"
                    android:layout_alignBottom="@id/progressWork"
                    android:background="@android:color/transparent"
                    android:text="할당된 배송 리스트 (8/10)"
                    android:gravity="center"
                    android:textColor="#FFF"
                    />

            </RelativeLayout>
        </LinearLayout>


        <ListView
            android:id="@+id/allWorkList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="59"
            android:background="#FAFAFA"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
