<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:id="@+id/layout_all_work">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textWorkTitle"
                android:text="1ë²ˆ : 201820972662"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#333"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/textWorkContents"
                android:text="@string/all_work_contents"
                android:textSize="20sp"
                android:textColor="#555"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                />

            <TextView
                android:id="@+id/textWorkAddress"
                android:text="@string/all_work_address"
                android:textSize="15sp"
                android:textColor="#888"
                android:maxLines="2"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageWorkState"
                android:contentDescription="@string/all_work_img_description"
                android:src="@drawable/label"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:id="@+id/imageWorkHow"
                android:contentDescription="@string/all_work_img_description"
                android:src="@drawable/label"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_height="100dp" />
        </LinearLayout>

    </RelativeLayout>





</LinearLayout>