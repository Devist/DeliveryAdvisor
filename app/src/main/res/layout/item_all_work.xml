<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout_all_work">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textWorkTitle"
            android:text="@string/all_work_title"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#555"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/textWorkContents"
            android:text="@string/all_work_contents"
            android:textSize="15sp"
            android:textColor="#555"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/textWorkAddress"
            android:text="@string/all_work_address"
            android:textSize="12sp"
            android:textColor="#888"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageWorkState"
        android:contentDescription="@string/all_work_img_description"
        android:src="@drawable/icon_check"
        android:layout_width="40dp"
        android:layout_marginEnd="10dp"
        android:layout_height="match_parent" />


</LinearLayout>